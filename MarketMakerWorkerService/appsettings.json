{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "MarketMakerWorkerService": "Debug"
    }
  },
  "MarketMaker": {
    "ApiBaseUrl": "https://perps-api-d7cff5fhd9g0b7c4.eastus-01.azurewebsites.net",
    "AccountId": "${HEDERA_ACCOUNT_ID}",
    "PrivateKeyDerHex": "${HEDERA_PRIVATE_KEY_DER_HEX}",
    "LedgerId": "${HEDERA_LEDGER_ID}",
    "KeyType": "ed25519",
    
    "BaseSpreadBps": 10,
    "LevelSpacingBps": 5,
    "NumLevels": 10,
    
    "TradingDecimals": 8,
    "SettlementDecimals": 6,
    
    "InitialMarginFactor": 1200000,
    
    "MaxPositionSize": 1000,
    "MaxNotionalExposure": 100000,
    "MinAccountBalance": 1000,
    "BalanceUtilization": 0.80,
    
    "TargetPosition": 0,
    "SkewFactor": 0.5,
    "MaxSkewBps": 50,
    
    "ReconciliationIntervalSeconds": 30,
    "TokenRefreshBuffer": "00:05:00",
    "MaxConcurrentCancels": 10,
    
    "EnableVolatilityAdjustment": true,
    "VolatilityHistorySize": 100,
    
    "RedisConnectionString": "${REDIS_CONNECTION_STRING}",
    "RedisIndexKey": "spot_index:BTC_USD",
    "RedisPollIntervalMs": 50,
    
    "RateLimitDelaySeconds": 10
  }
}

