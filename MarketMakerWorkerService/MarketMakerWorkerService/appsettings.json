{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient": "Warning",
        "MarketMakerWorkerService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ]
  },
  "MarketMaker": {
    "ApiBaseUrl": "https://perps-api-d7cff5fhd9g0b7c4.eastus-01.azurewebsites.net",
    "AccountId": "${HEDERA_ACCOUNT_ID}",
    "PrivateKeyDerHex": "${HEDERA_PRIVATE_KEY_DER_HEX}",
    "LedgerId": "${HEDERA_LEDGER_ID:testnet}",
    "KeyType": "ed25519",
    "TokenRefreshIntervalSeconds": "${TOKEN_REFRESH_INTERVAL_SECONDS:800}",
    "TradingDecimals": 8,
    "SettlementDecimals": 6,
    "NumberOfLevels": 4,
    "Level0Quantity": 0.001,
    "Levels1To2Quantity": 0.001,
    "Levels3To9Quantity": 0.001,
    "BaseSpreadBps": 98,
    "LevelSpacingBps": 10,
    "BaseSpreadUsd": 100.00,
    "LevelSpacingUsd": 0.10,
    "RedisConnectionString": "${REDIS_CONNECTION_STRING}",
    "RedisIndexKey": "spotindex:BTC_USD",
    "RedisPollIntervalMs": 1000,
    "InitialMarginFactor": 0.2,
    "MaintenanceMarginFactor": 1.0,
    "RateLimitDelaySeconds": 10,
    "MaxPositionSize": 1000,
    "MaxNotionalExposure": 100000,
    "MinAccountBalance": 1000,
    "BalanceUtilization": 0.80,
    "TargetPosition": 0,
    "SkewFactor": 0.5,
    "MaxSkewBps": 50,
    "EnableVolatilityAdjustment": true,
    "VolatilityHistorySize": 100,
    "MaxConcurrentCancels": 10
  }
}
