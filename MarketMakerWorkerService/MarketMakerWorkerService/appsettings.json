{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Debug",
        "System.Net.Http.HttpClient": "Warning",
        "MarketMakerWorkerService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ]
  },
  "MarketMaker": {
    "ApiBaseUrl": "https://perps-api-d7cff5fhd9g0b7c4.eastus-01.azurewebsites.net",
    "AccountId": "${HEDERA_ACCOUNT_ID}",
    "PrivateKeyDerHex": "${HEDERA_PRIVATE_KEY_DER_HEX}",
    "LedgerId": "${HEDERA_LEDGER_ID:testnet}",
    "KeyType": "ed25519",
    "TokenRefreshIntervalSeconds": "${TOKEN_REFRESH_INTERVAL_SECONDS:800}",
    "TradingDecimals": 8,
    "SettlementDecimals": 6,
    "NumberOfLevels": 4,
    "Level0Quantity": 0.00001,
    "Levels1To2Quantity": 0.000005,
    "Levels3To9Quantity": 0.000001,
    "BaseSpreadUsd": 100.00,
    "LevelSpacingUsd": 1.00,
    "RedisConnectionString": "${REDIS_CONNECTION_STRING}",
    "RedisIndexKey": "spotindex:BTC_USD",
    "RedisPollIntervalMs": 1000,
    "InitialMarginFactor": 0.2,
    "BalanceUtilization": 0.80,
    "UpdateBehaviorFlag": "${UPDATE_BEHAVIOR_FLAG:1}",
    "AtomicReplacementDelayMs": "${ATOMIC_REPLACEMENT_DELAY_MS:120}"
  }
}
